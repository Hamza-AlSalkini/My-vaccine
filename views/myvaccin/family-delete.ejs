            <% res1 = res1[0] %>
                <form method="post" action="/family-delete">
                    <legend>Delete a family member</legend>
                    <div class="form-group">
                        <label for="idf">Id:</label>
                        <input id="idf" type="number" class="form-control" name="idf" readonly value="<%= res1.idf %>"><br>
                    </div>
