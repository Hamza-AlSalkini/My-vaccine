                        <input id="name" type="text" class="form-control" name="name" value="<%= res1.name %>"><br>
                    </div>
                    <div class="form-group">
                        <label for="dateofbirth">Date of birth:</label>
                        <input id="dateofbirth" type="date" class="form-control" name="dateofbirth" value="<%= res1.dateofbirth %>"><br>
                    </div>
                    <div class="form-group">
                        <label for="gender">Gender:</label>
                        <input id="gender" type="text" class="form-control" name="gender" value="<%= res1.gender %>"><br>
                    </div>
                    <br><input type="submit" class="btn btn-primary" name="doit" value="Delete">

