<%- include("header"); %>
    <div class="sidebar-container">
        <div class="sidebar-logo">
            My vaccine
        </div>
        <ul class="sidebar-navigation">
            <li class="header">Menu</li>
            <li>
                <a href="/profile">
                    <i class="fa fa-user-circle" aria-hidden="true"></i> Dashboard
                </a>
            </li>
            <li class="header">Another Menu</li>
            <li>
                <a href="/family-members">
                    <i class="fa fa-users" aria-hidden="true"></i> Family members
                </a>
            </li>
            <li>
                <a href="/vaccine-user">
                    <i class="fa fa-heartbeat" aria-hidden="true"></i> Vaccine
                </a>
            </li>
            <li>
                <a href="/add-vaccine-user">
                    <i class="fa fa-plus" aria-hidden="true"></i> Register vaccine
                </a>
            </li>
            <li>
                <a href="/show-vaccine-log">
                    <i class="fa fa-id-card-o" aria-hidden="true"></i> Vaccinate log
                </a>
            </li>
            <li>
                <a href="/user-settings">
                    <i class="fa fa-cog" aria-hidden="true"></i> Settings
                </a>
            </li>
            <li>
                <a href="/logout">
                    <i class="fa fa-sign-out" aria-hidden="true"></i> sign out
                </a>
            </li>
        </ul>
    </div>

    <div class="content-container">

        <div class="container-fluid">
            <div class="jumbotron">

                <h1 class="middle">Rigester vaccine</h1>


                <form method="post" action="/add-vaccine-user">
                    <h3 class="middle">By chosing the person, vaccine and the vaccinate date</h3>
                    <br>
            </div>
            <table class="table">
                <tr>
                    <th class="th">Choose a person</th>
                    <th class="th">Choose vaccine</th>
                    <th class="th">Vaccinate day
                    </th>
                    <th class="th">Add</th>

                </tr>
                <tr>
                    <td class="middle">
                        <select name="name">
                            <% for (const row of res1) { %>
                                <option name="name" value="<%= row.name %>" readonly><%= row.name %></option>
                            <% } %>
                            <% for (const row of res2) { %>
                                <option name="firstName" value="<%= row.firstName %>" readonly><%= row.firstName %> <%= row.secondName %></option>
                            <% } %>
                        </select>
                    </td>
                    <td class="middle">
                        <select name="vaccine">
                                <% for (const row of res3) { %>
                                    <option value="<%= row.vaccine %>" readonly><%= row.vaccine %></option>
                                <% } %>
                            </select>
                    </td>
                    <td class="middle">
                        <input class="middle" type="date" name="date" required value="yyyy-mm-dd">
                    </td>
                    <td class="middle">
                        <input class="btn btn-primary" type="submit" class="create" value="Add vaccine">
                    </td>
                </tr>
            </table>
            </form>
        </div>
    </div>